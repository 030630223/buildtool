#!/bin/bash

HOME=/home/dan/buildtool
IN=/home/dan/buildtool/apk_in
OUT=/home/dan/buildtool/apk_out
DEC=/home/dan/buildtool/apk_in/decompiled
SRC=/home/dan/buildtool/source_roms
FIX=/home/dan/buildtool/src_fix
FLASH=/home/dan/buildtool/flashable
LOG=/home/dan/buildtool/log
MODS=/home/dan/buildtool/mods
MAIN=/home/dan/buildtool/translations/XML_MIUI-v5_Danish/Danish/main
DEVICE=/home/dan/buildtool/translations/XML_MIUI-v5_Danish/Danish/device/m0
tlock=~/buildtool/flashable/template/system/media/theme/default
dst=~/buildtool/flashable/system/media/theme/default
src=~/buildtool/translations/XML_MIUI-v5_Danish/Danish/extras/lockscreen

source $HOME/functions.sh

clear

while [ answer != "0" ] 
do
clear
echo "|----------------------------------------------------------------|"
echo "|                                                                |"
echo "|                       MIUI building script                     |"
echo "|                                                 -By 1982Strand |"
echo "|----------------------------------------------------------------|"
echo "|                                                                |"
echo "|                                                                |"
echo "|                                                                |"
echo "|                                                                |"
echo "|----------------------------------------------------------------|"
echo "| 1.  Install frameworks        ||                               |"
echo "| 2.  Decompile all apks/jars   ||                               |"
echo "| 3.  Add translations          ||                               |"
echo "| 4.  Fix MIUI sources          || 13. Fix official sources      |"
echo "| 5.  Add predefined Mods       || 14. Patch & Build off. ROM    |"
echo "| 6.  Recompile apks/jars       ||                               |"
echo "| 7.  Inject resources          ||                               |"
echo "| 8.  Optimize pngs             ||                               |"
echo "| 9.  Zipalign apks             ||                               |"
echo "| 10. Build Flashable Zip       ||                               |"
echo "| 11. Decompile single apk      ||                               |"
echo "| 12. Recompile single apk      ||                               |"
echo "|                               || e. Extract apks from zip      |"
echo "|                               ||                               |"
echo "|                               || c. Cleaning Options           |"
echo "|----------------------------------------------------------------|"
echo "|x - Exit                                                        |"
echo "|----------------------------------------------------------------|"
printf %s " Select an Option: "
read -p " " answer
    case $answer in
       1) clear
       install_frameworks
       ;;
       2) clear
       decompile_apks
       ;;
       3) clear
       add_translations
       ;;
       4) clear
       source_fix
       ;;
       5) clear
       . $HOME/5.mods.sh
       ;;
       6) clear
       recompile_apks
       ;;
       7) clear
       inject_res
       ;;
       8) clear
       . $HOME/8.opt_png.sh
       ;;
       9) clear
       zipalign
       ;;
       10) clear
       flashable
       ;;
       11) clear
       . $HOME/11.decompile_single.sh
       ;;
       12) clear
       . $HOME/12.recompile_single.sh
       ;;
       13) clear
       . $HOME/13.source_fix_official.sh
       ;;
       14) clear
       . $HOME/14.patch_miui.sh
       ;;
       e) clear
       pull
       ;;
       c) clear
       . $HOME/clean_menu.sh
       ;;
       x) clear 
       exit;;
       *) break
       . $HOME/build ;;
   esac
   echo ""
   echo "" 
   echo "[--- Press RETURN for menu ---]"
   read key
done
exit 0

